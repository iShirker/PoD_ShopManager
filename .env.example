# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production

# Database
DATABASE_URL=sqlite:///pod_manager.db

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Etsy API
ETSY_API_KEY=your-etsy-api-key
ETSY_API_SECRET=your-etsy-api-secret
ETSY_REDIRECT_URI=http://localhost:5000/api/auth/etsy/callback

# Shopify API
SHOPIFY_API_KEY=your-shopify-api-key
SHOPIFY_API_SECRET=your-shopify-api-secret

# Gelato API
GELATO_API_KEY=your-gelato-api-key
GELATO_CLIENT_ID=your-gelato-client-id
GELATO_CLIENT_SECRET=your-gelato-client-secret
GELATO_REDIRECT_URI=http://localhost:5000/api/auth/gelato/callback
GELATO_OAUTH_SCOPE=
GELATO_OAUTH_AUTHORIZE_URL=https://api.gelato.com/oauth/authorize
GELATO_OAUTH_TOKEN_URL=https://api.gelato.com/oauth/token

# Printify API
PRINTIFY_API_KEY=your-printify-api-key

# Printful API
PRINTFUL_API_KEY=your-printful-api-key
