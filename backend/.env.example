# Flask Configuration
FLASK_ENV=development
SECRET_KEY=generate-a-secure-random-key
JWT_SECRET_KEY=generate-another-secure-random-key

# Database (for local development - Railway provides DATABASE_URL automatically)
DATABASE_URL=sqlite:///pod_manager.db

# Frontend/Backend URLs
# Local development:
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000
# Production (update with your Railway URLs or custom domain):
# FRONTEND_URL=https://your-frontend.up.railway.app
# BACKEND_URL=https://your-backend.up.railway.app

# Google OAuth (https://console.cloud.google.com)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Etsy API (https://www.etsy.com/developers/your-apps)
ETSY_API_KEY=your-etsy-keystring
ETSY_API_SECRET=your-etsy-shared-secret
ETSY_REDIRECT_URI=http://localhost:5000/api/auth/etsy/callback

# Shopify API (https://partners.shopify.com)
SHOPIFY_API_KEY=your-shopify-api-key
SHOPIFY_API_SECRET=your-shopify-api-secret

# Gelato API (https://dashboard.gelato.com/developers)
GELATO_API_KEY=your-gelato-api-key
GELATO_CLIENT_ID=your-gelato-client-id
GELATO_CLIENT_SECRET=your-gelato-client-secret
GELATO_REDIRECT_URI=http://localhost:5000/api/auth/gelato/callback
GELATO_OAUTH_SCOPE=
GELATO_OAUTH_AUTHORIZE_URL=https://api.gelato.com/oauth/authorize
GELATO_OAUTH_TOKEN_URL=https://api.gelato.com/oauth/token

# Printify OAuth (https://printify.com/app/settings/developer)
PRINTIFY_CLIENT_ID=your-printify-client-id
PRINTIFY_CLIENT_SECRET=your-printify-client-secret
# Or use Personal Access Token instead of OAuth:
# PRINTIFY_TOKEN=your-printify-personal-access-token

# Printful OAuth (https://www.printful.com/oauth/)
PRINTFUL_CLIENT_ID=your-printful-client-id
PRINTFUL_CLIENT_SECRET=your-printful-client-secret
